doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='/bootstrap/css/amelia.bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-default
      .container
        .navbar-header
          a.navbar-brand(href='/') Recipe Hub
        ul.nav.navbar-nav
          li: a(href='/recipes') Recipes
          li: a(href='/categories') Categories
          li: a(href='/reviews') Reviews
          li: a(href='/about') About
    .container
      h1 Recipe Categories
      each category in categoriesData
        h2 #{category.name}
        .row
          each item in category.items
            .col-xs-12.col-sm-4
              .card
                img(src=item.image, alt=item.name, class='img-responsive')
                .card-body
                  h5.card-title #{item.name}
                  p.card-text #{item.description}
