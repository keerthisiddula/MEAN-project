doctype html
html
  head
    title #{title}
    link(rel="stylesheet", href='/bootstrap/css/amelia.bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-default
      .container
        .navbar-header
          a.navbar-brand(href='/') Recipe Hub
        ul.nav.navbar-nav
          li: a(href='/recipes') Recipes
          li: a(href='/categories') Categories
          li: a(href='/reviews') Reviews
          li: a(href='/about') About
    block content
      .container
        h1 #{title}
        .row
          each recipe in recipes
            .col-xs-12.col-sm-6.col-md-4
              .card
                img.card-img-top(src=recipe.imageUrl, alt=recipe.name)
                .card-body
                  h5.card-title
                    a(href=`/recipes/${recipe.id}`)= recipe.name
                  p.card-text= recipe.description
                  p.card-text Cook Time: #{recipe.cookingTime}
                  p.card-text Fun Fact: #{recipe.funFact}
